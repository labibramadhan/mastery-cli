{
  "env": {
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "conf": true,
    "constants": true,
    "pkg": true,
    "requireF": true,
    "rootPath": true,
    "throwError": true
  },
  "rules": {
    "global-require": 0,
    "import/no-dynamic-require": 0,
    "import/prefer-default-export": 0,
    "max-len": ["error", 100, {
      "ignoreComments": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "no-console": 0
  }
}
